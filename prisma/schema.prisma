generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  userKey     Int           @id @default(autoincrement())
  email       String        @unique
  firstName   String
  password    String
  salt        String
  createdDate DateTime      @default(now())
  learned     UserLearned[]
}

model UserLearned {
  userLearnedKey Int           @id @default(autoincrement())
  wotdKey        Int
  userKey        Int
  user           User?         @relation(fields: [userKey], references: [userKey])
  word           WordOfTheDay? @relation(fields: [wotdKey], references: [wotdKey])
}

model WordOfTheDay {
  wotdKey       Int           @id @default(autoincrement())
  word          String        @unique
  definition    String
  pronunciation String
  partOfSpeech  String
  usage         String
  date          DateTime
  usersLearned  UserLearned[]
}
